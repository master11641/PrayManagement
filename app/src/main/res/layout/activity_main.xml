<?xml version="1.0" encoding="utf-8"?>
<com.rupins.drawercardbehaviour.CardDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:fitsSystemWindows="true"
    android:layout_gravity="right"
    android:background="@color/White"
    tools:openDrawer="start">
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_notification"
        android:background="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:menu="@menu/navigation_main_menu"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Picture"/>

        <Button
            android:id="@+id/btnCategoryList"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="100dp"
            android:drawableRight="@drawable/ic_toc_black_24dp"
            android:text="مدیریت دسته بندی"
            android:textAlignment="viewStart"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Picture"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Picture"/>

        <Button
            android:id="@+id/btnList"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="180dp"
            android:drawableRight="@drawable/ic_toc_black_24dp"
            android:text="مدیریت دعاها"
            android:textAlignment="viewStart"
            android:textColor="@color/Black"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@android:drawable/divider_horizontal_dark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="220dp"
            android:drawableRight="@drawable/ic_playlist_add_black_24dp"
            android:text="افزودن دعای جدید"
            android:textAlignment="viewStart"
            android:textColor="@color/Black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnSelectCategory"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="260dp"
            android:drawableRight="@drawable/ic_playlist_add_black_24dp"
            android:text="انتخاب گروه"
            android:textAlignment="viewStart"
            android:textColor="@color/Black"
            android:textStyle="bold" />
        <Button
        android:id="@+id/btnShowSite"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_gravity="right"
        android:layout_marginTop="300dp"
        android:drawableRight="@drawable/ic_playlist_add_black_24dp"
        android:text=" سایت ما"
        android:textAlignment="viewStart"
        android:textColor="@color/Black"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btnNotification"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginTop="340dp"
            android:drawableRight="@drawable/ic_playlist_add_black_24dp"
            android:text="  نمایش اعلان"
            android:textAlignment="viewStart"
            android:textColor="@color/Black"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
        <Button
            android:id="@+id/btnCategoryAdd"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="140dp"
            android:drawableRight="@drawable/ic_playlist_add_black_24dp"
            android:text="افزودن گروه جدید"
            android:textAlignment="viewStart"
            android:textColor="@color/Black"
            android:textStyle="bold" />


    </android.support.design.widget.NavigationView>

    <LinearLayout
        android:id="@+id/frg_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/rect_page_header"
            android:gravity="end"
            android:foreground="@color/White">
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="@string/app_name"
                android:layout_marginRight="60px"
                android:layout_gravity="right"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/showMenues"
                android:textSize="12sp"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="#FFF"
                android:src="@drawable/ic_dehaze_black_24dp"
                android:layout_marginRight="25px"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/imageButtonHome"
                android:textSize="12sp"
                android:background="@null"
                android:textColor="#FFF"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_marginLeft="25px"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/imageGetFromServer"
                android:textSize="12sp"
                android:background="@null"
                android:textColor="#FFF"
                android:src="@drawable/ic_autorenew_black_24dp"
                android:layout_marginLeft="50px"
                />
    </android.support.v7.widget.Toolbar>

    </LinearLayout>


</com.rupins.drawercardbehaviour.CardDrawerLayout>